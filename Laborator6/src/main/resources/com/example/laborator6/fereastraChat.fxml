<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laborator6.ChatController">

    <!-- Titlul ferestrei -->
    <Label text="Chat Window" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Lista cu mesaje -->
    <ListView fx:id="messagesListView" prefHeight="400" prefWidth="600"/>

    <!-- Zona de trimitere a mesajelor -->
    <HBox spacing="10">
        <!-- CÃ¢mp pentru scrierea mesajului -->
        <TextField fx:id="messageTextField" promptText="Write your message here..." HBox.hgrow="ALWAYS"/>

        <!-- Buton de trimitere -->
        <Button fx:id="sendButton" text="Send" onAction="#onSendButtonAction"/>
    </HBox>

</VBox>
